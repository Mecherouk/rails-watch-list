<h2><%= @list.name %></h2>

<ul>
  <% @list.movies.each do |movie| %>
    <li><%= movie.title %></li>

    <%= link_to "Delete",
      bookmark_path(movie.bookmarks.find_by(list: @list)),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>

  <% end %>
</ul>

<%= link_to 'Add bookmark', new_list_bookmark_path(@list), class: "btn btn-primary" %>
<%= link_to 'Back to lists', lists_path, class: "btn btn-primary" %>
